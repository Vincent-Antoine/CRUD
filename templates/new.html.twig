{% extends 'base.html.twig' %}

{% block title %}Ajouter un Contact{% endblock %}

{% block body %}
    {% include 'header.html.twig' %}

    <div class="container mt-5">
        <h1 class="mb-4">Ajouter un Contact</h1>

        <div class="card">
            <div class="card-body">
                {{ form_start(form, {'attr': {'class': 'form'}}) }}

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">{{ form_label(form.nom) }}</label>
                        <div class="col-sm-10">
                            {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.nom) }}
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">{{ form_label(form.prenom) }}</label>
                        <div class="col-sm-10">
                            {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.prenom) }}
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">{{ form_label(form.numeroTelephone) }}</label>
                        <div class="col-sm-10">
                            {{ form_widget(form.numeroTelephone, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.numeroTelephone) }}
                        </div>
                    </div>

                     <div class="form-group row">
                        <label class="col-sm-2 col-form-label">{{ form_label(form.email) }}</label>
                        <div class="col-sm-10">
                            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.email) }}
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">{{ form_label(form.adressePostale) }}</label>
                        <div class="col-sm-10">
                            {{ form_widget(form.adressePostale, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.adressePostale) }}
                        </div>
                    </div>

                    <div class="form-group row justify-content-end">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-primary">Ajouter</button>
                        </div>
                    </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
