{% extends 'base.html.twig' %}

{% block title %}Liste des Contacts{% endblock %}

{% block body %}
    <h1 class="mb-4">Liste des Contacts</h1>

    <table class="table table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Date d'anniversaire</th>
                <th>Numéro de téléphone</th>
                <th>Email</th>
                <th>Adresse postale</th>
            </tr>
        </thead>
        <tbody>
            {% for contact in contacts %}
                <tr>
                    <td>{{ contact.nom }}</td>
                    <td>{{ contact.prenom }}</td>
                    <td>{{ contact.dateAnniversaire|date('d/m/Y') }}</td>
                    <td>{{ contact.numeroTelephone }}</td>
                    <td>{{ contact.email }}</td>
                    <td>{{ contact.adressePostale }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
