{% extends 'base.html.twig' %}

{% block title %}Liste des Contacts{% endblock %}

{% block body %}
    {% include 'header.html.twig' %}

    <div class="container mt-5">
        <h1 class="mb-4">Liste des Contacts</h1>

        <div class="card">
            <div class="card-header">
                Contacts
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th>Nom</th>
                            <th>Prénom</th>
                            <th>Numéro de téléphone</th>
                            <th>Email</th>
                            <th>Adresse postale</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for contact in contacts %}
                            <tr>
                                <td>{{ contact.nom }}</td>
                                <td>{{ contact.prenom }}</td>
                                <td>{{ contact.numeroTelephone }}</td>
                                <td>{{ contact.email }}</td>
                                <td>{{ contact.adressePostale }}</td>
                                <td>
                                    <a href="{{ path('contact_edit', {'id': contact.id}) }}" class="btn btn-warning">Modifier</a>
                                    <a href="{{ path('contact_delete', {'id': contact.id}) }}" class="btn btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce contact ?');">Supprimer</a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
